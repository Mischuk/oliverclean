- var project = "Оливер Клин"

-
  var list = [
    { title: 'Главная', url: 'home.html' },
    { title: 'О нас', url: 'about.html' },
    { title: 'Команда', url: 'team.html' },
    { title: 'История', url: 'history.html' },
    { title: 'История (внутренняя)', url: 'history-item.html' },
    { title: 'Вакансии', url: 'job.html' },
    { title: 'Вакансии (внутренняя)', url: 'job-item.html' },
    { title: 'Контакты', url: 'contacts.html' },
    { title: 'Услуги', url: 'services.html' },
    { title: 'Услуги (внутренняя)', url: 'service-item.html' }
  ]

doctype html
html(lang="ru")
head
  title= project
  meta(charset="UTF-8")
  meta(http-equiv="X-UA-Compatible" content="IE=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1")
  meta(name="msapplication-tap-highlight" content="no")
  link(href="https://fonts.googleapis.com/css?family=Cuprum&subset=cyrillic" rel="stylesheet")
  link(href="https://fonts.googleapis.com/css?family=Bad+Script&subset=cyrillic" rel="stylesheet")
  style.
    body {height: 100%; font-family: 'Cuprum', sans-serif;font-size:  24px;margin: 0;background: #fff;}
    h1{font-family: 'Bad Script', cursive;background:#3b3a36;padding: 40px 20px; color: #fff; margin: 0;border-bottom: 20px solid #fff;}
    h2 {font-weight:  normal;cursor:  default;}
    ul {margin: 0;padding-left: 0;margin-left:  20px;overflow:  hidden;}
    li {list-style:  none;}
    a {
      transition: color .15s ease-in;
      color: #312c32;
      text-decoration: none;
      display: inline-block;
      padding: 5px 0;
    }
    a:hover {
      color: #ef284b;
    }

body
  h1= project
  ul
    -each post in list
      li
         a(href =post.url) #{post.title}
