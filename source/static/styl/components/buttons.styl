// Mobile burger button
.mobile-menu-trigger
  anim()
  display block
  position absolute
  z-index 10
  right 10px
  top 24px
  width 20px
  height 15px
  cursor pointer
  @media SM
    right auto
    left -30px
    top 50%
    margin-top -6.5px
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 50%
    width 20px
    margin-left -10px
    height 3px
    background #0063a6
  &:before
    top 0
  &:after
    bottom 0
  span
    top 50%
    margin-top -1.5px
  &.open
    span
      opacity 0
      transform translateX(-5px)
    &:after
      transform rotate(135deg) translate(-4px, 4px)
    &:before
      transform rotate(-135deg) translate(-4px, -4px)

.button
  anim()
  display block
  color #fff
  text-decoration none
  text-transform uppercase
  background $button
  text-align center
  border none
  &:visited
    color #fff
  &:hover
    background $button - 10%
    text-decoration none
    color #fff
  &:focus
    color #fff
    text-decoration none

