h1, h2, h3, h4, h5, h6
  line-height 1.2
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px

p
  margin-top 0
  margin-bottom 20px

a
  color $link
  text-decoration underline
  &:hover
    color #333
    text-decoration none
  &:visited
    color $link

.heading
  position relative
  font-size 36px
  line-height 0.8
  padding-bottom 20px
  margin-bottom 20px
  color $heading
  @media SM
    font-size 48px
  &:after
    content ''
    width 70px
    height 3px
    background $yellow
    position absolute
    left 0
    bottom 0
  &.center
    text-align center
    &:after
      left 50%
      margin-left -35px
  &.no-line:after
    display none
  &.arrows
    padding-right 100px
  &.white
    color #fff
    text-shadow 1px 1px 1px rgba(0,0,0,.2)

article
  .col-xs-6 > img
    margin-bottom 15px
  h3
    font-size 24px
    margin-bottom 30px
  > ul
    margin-bottom 30px
    li
      font-size 18px
      line-height 26px
      padding 5px 0
      padding-left 30px
      &:before
        content 'â€”'
        color #0063a6
        margin-right 10px
        margin-left -30px

  .lead-image
    width 100%
  p
    font-size 18px
    line-height 26px
    &.large
      font-size 20px
      line-height 1.3
      font-weight 500
      @media SM
        font-size 24px
    &.lead
      font-size 24px
      line-height 1.2
      margin-top 20px
      font-weight 300
      margin-bottom 50px
      @media SM
        font-size 28px
  .images
    overflow hidden
    padding-bottom 15px
    img
      float left
      width 50%
      padding-right 15px
      & + img
        padding-left 15px
        padding-right 0