.m_lead-preview
  position relative
  height 550px
  margin-bottom 30px
  color #fff
  @media screen and (max-width: 460px)
    height auto
    padding-bottom 30px
  .image
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position 50%
    background-size cover
    z-index -1
  .title
    background #d41a2f
    font-size 300%
    line-height 1.1
    padding-top 10px
    padding-bottom 20px
    font-weight bold
    display inline-block
    vertical-align middle
    padding-right 20px
    position relative
    margin-bottom 30px
    @media screen and (max-width: 1200px)
      padding-left 15px
    @media screen and (max-width: 768px)
      margin-top 30px
      font-size 24px
      max-width 80%
    @media screen and (max-width: 460px)
      margin-top 0
    &:before
      content ''
      position absolute
      left -2000px
      top 0
      width 2000px
      height 100%
      background #d41a2f
    &:after
      content ''
      position absolute
      right -25px
      top 0
      height 100%
      width 100px
      background #d41a2f
      transform skew(-25deg)
    span
      position relative
      z-index 1
  .desc
    font-weight 300
    font-size 18px
    line-height 22px
    max-width 740px
    margin-bottom 40px
    @media screen and (max-width: 1200px)
      padding-left 15px
    @media screen and (max-width: 768px)
      max-width 90%
      margin-bottom 20px
      font-size 16px
      line-height 20px
      padding-top 20px
  .bonus
    font-size 24px
    font-weight bold
    position relative
    padding-left 40px
    height 30px
    line-height 30px
    @media screen and (max-width: 1200px)
      padding-left 60px
    @media screen and (max-width: 768px)
      margin-bottom 20px
    @media screen and (max-width: 460px)
      height auto
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat -50px 0;
      width: 31px;
      height: 32px;
      position absolute
      left 0
      top 50%
      margin-top -16px
      @media screen and (max-width: 1200px)
        left 15px
  .details
    position absolute
    left 50%
    margin-left -585px
    bottom 75px
    display block
    width 170px
    height 50px
    line-height 48px
    text-align center
    border 1px solid #fff
    color #fff
    text-decoration none
    font-size 16px
    text-transform uppercase
    @media screen and (max-width: 1200px)
      margin-left 0
      left 30px
    @media screen and (max-width: 460px)
      position static
      margin-left 25px
    &:hover
      background #d41a2f
      color #fff
      border-color #d41a2f
    &:active
      background #d41a2f - 15%