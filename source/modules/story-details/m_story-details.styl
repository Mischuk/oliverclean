.m_story-details
  background #f0f5f8
  margin-top 20px
  padding 10px 20px 20px 20px
  .title
    position relative
    padding-bottom 10px
    margin-bottom 15px
    font-size 24px
    line-height 40px
    &:after
      content ''
      width 70px
      height 3px
      background $yellow
      position absolute
      left 0
      bottom 0
  .section
    color #999999
    margin-bottom 15px
  table
    color #333333
    tr
      @media screen and (max-width: 380px)
        display block
        margin-bottom 15px
    td
      padding 10px 5px
      vertical-align top
      @media screen and (max-width: 380px)
        display block
        padding 0