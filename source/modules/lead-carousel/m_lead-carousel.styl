.m_lead-carousel
  position relative
  // height 600px
  color #fff
  .container-fluid
    height 100%
    position relative
  .tp-bullets.simplebullets .bullet
    background rgba(255,255,255,.5) !important
    &.selected,
    &:hover
      background $yellow !important
      border-color $yellow !important
  .tparrows
    width 30px !important
    height 30px !important
    background rgba(255,255,255,.5) !important
    border-radius 50%
    @media screen and (max-width: 1200px)
      display none !important
    &.tp-rightarrow
      &:before
        background: url('../images/sprite.png') no-repeat -150px 0;
      &:hover:before
        background-position -150px -54px
    &.tp-leftarrow
      &:before
        background: url('../images/sprite.png') no-repeat -100px 0;
      &:hover:before
        background-position -100px -54px
    &:before
      content ''
      position absolute
      width: 8px;
      height: 13px;
      left 50% !important
      top 50% !important
      margin-left -4px !important
      margin-top -6.5px !important
    &:hover
      background rgba(255,255,255,1) !important
  .tp-banner
    height 600px !important
    @media screen and (max-width: 768px)
      height 440px !important
    @media screen and (max-width: 460px)
      height 480px !important
    @media screen and (max-width: 460px)
      height 580px !important
  .slotholder
    position absolute
    left 0
    top 0
  .tp-caption
    left 0 !important
    width 100% !important
    white-space: initial
    opacity 0
    @media screen and (max-width: 768px)
      position static !important
  .title
    background #d41a2f
    font-size 300%
    // font-size 48px
    line-height 1.1
    padding-top 10px
    padding-bottom 20px
    font-weight bold
    display inline-block
    vertical-align middle
    padding-right 20px
    position relative
    @media screen and (max-width: 1200px)
      padding-left 15px
    @media screen and (max-width: 768px)
      margin-top 30px
      font-size 24px
      max-width 80%
    &:before
      content ''
      position absolute
      left -2000px
      top 0
      width 2000px
      height 100%
      background #d41a2f
    &:after
      content ''
      position absolute
      right -25px
      top 0
      height 100%
      width 100px
      background #d41a2f
      transform skew(-25deg)
    span
      position relative
      z-index 1
  .desc
    font-weight 300
    font-size 18px
    // font-size 110%
    line-height 22px
    max-width 740px
    margin-bottom 40px
    @media screen and (max-width: 1200px)
      padding-left 15px
    @media screen and (max-width: 768px)
      max-width 90%
      margin-bottom 20px
      font-size 16px
      line-height 20px
      padding-top 20px
  .bonus
    font-size 24px
    font-weight bold
    position relative
    padding-left 40px
    height 30px
    line-height 30px
    @media screen and (max-width: 1200px)
      padding-left 60px
    @media screen and (max-width: 768px)
      margin-bottom 20px
    @media screen and (max-width: 460px)
      height auto
    &:after
      content ''
      background: url('../images/sprite.png') no-repeat -50px 0;
      width: 31px;
      height: 32px;
      position absolute
      left 0
      top 50%
      margin-top -16px
      @media screen and (max-width: 1200px)
        left 15px
  .details
    display block
    width 170px
    height 50px
    line-height 48px
    text-align center
    border 1px solid #fff
    color #fff
    text-decoration none
    font-size 16px
    text-transform uppercase
    @media screen and (max-width: 1200px)
      margin-left 15px
    &:hover
      background #d41a2f
      color #fff
      border-color #d41a2f
    &:active
      background #d41a2f - 15%
