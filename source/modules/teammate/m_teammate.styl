.m_teammate
  position relative
  padding-left 40%
  background #f0f5f8
  margin-bottom 30px
  padding-top 15px
  padding-bottom 15px
  padding-right 15px
  overflow hidden
  min-height 375px
  @media SM
    height 375px
  @media screen and (max-width: 380px)
    padding-left 15px
    padding-top 310px
  .image
    position absolute
    left 0
    top 0
    width 35%
    height 100%
    background-repeat no-repeat
    background-position 50%
    background-size cover
    @media screen and (max-width: 380px)
      width 100%
      height 300px
      background-position top
  .name
    font-size 24px
    line-height 30px
    font-weight 500
    margin-bottom 10px
  .status
    position relative
    font-size 18px
    color #333
    padding-bottom 10px
    margin-bottom 15px
    &:after
      content ''
      width 70px
      height 3px
      background $yellow
      position absolute
      left 0
      bottom 0
    span
      color #999
  .desc
    font-size 18px
    line-height 26px
    color #333