.m_job
  position relative
  background #f0f5f8
  margin-bottom 30px
  padding 20px 30px
  overflow hidden
  min-height 325px
  @media SM
    height 325px
  .title
    margin-bottom 15px
    a
      font-size 24px
      line-height 30px
      font-weight 500
      margin-bottom 10px
      color #333
      &:hover
        color #0063a6
        text-decoration none
  .price
    position relative
    font-size 18px
    color #333
    padding-bottom 10px
    margin-bottom 30px
    &:after
      content ''
      width 70px
      height 3px
      background $yellow
      position absolute
      left 0
      bottom 0
  .desc
    font-size 18px
    line-height 26px
    color #333