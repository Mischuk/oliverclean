.m_form
  border 1px solid #eaf0f3
  background #f0f5f8
  padding 20px 30px
  max-width 500px
  .title
    position relative
    font-size 18px
    color #333
    padding-bottom 20px
    margin-bottom 25px
    font-size 28px
    line-height 38px
    &:after
      content ''
      width 70px
      height 3px
      background $yellow
      position absolute
      left 0
      bottom 0
  .form-row
    margin-bottom 15px
  .input, textarea
    box-shadow: 0 1px 2px rgba(0,0,0,.05);
    border: solid 1px #eaf0f3;
    margin-bottom 0
  .file-upload
    .upload-status
      color #333
      width 47%
      text-align center
      margin-top 0
      @media screen and (max-width: 568px)
        width 100%
        margin-top 10px
        text-align left
    .label-button
      width 220px
      border-color #0080d7
      color #0080d7
      &:hover
        background #0080d7
        color #fff
  .submit
    font-size 18px